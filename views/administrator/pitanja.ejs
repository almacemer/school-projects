<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/javascripts/admin.js"></script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/admin">Administrator</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/admin/predavaci">Predavači</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/predavanja">Predavanja</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/admin/pitanja">Pitanja</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/admin/zabranjene-rijeci">Zabranjene riječi</a>
                </li>
            </ul>
            <form method="post" action="/logout" class="d-flex">
                <button type="submit" class="btn">Logout</button>
            </form>
        </div>
    </div>
</nav>

<div class="table-responsive mx-5">
    <table id="tableID" style="cursor: pointer; text-align: center; margin-top: 2rem;" class="table table-responsive table-hover table-bordered align-middle bg-light">
        <thead>
        <tr>
            <th>#</th>
            <th>Tekst</th>
            <th>Broj odobravanja</th>
            <th>Vrijeme</th>
            <th>Naziv predavanja</th>
            <th>Kod predavanja</th>
            <th>Akcija1</th>
        </tr>
        </thead>
        <tbody style="text-align: center">
        <% for(let i = 0; i < pitanja.length; i++) { %>
            <tr id="pitanje<%= pitanja[i].pitanjeid %>">
                <td><%=i+1%></td>
                <td><%= pitanja[i].tekst %></td>
                <td><%= pitanja[i].lajkovi %></td>
                <td><%= moment(pitanja[i].vrijeme).format('h:mm:ss') %></td>
                <td><%= pitanja[i].predavanjenaziv %></td>
                <td><%= pitanja[i].predavanjekod %></td>
                <td><button class="btn btn-danger" onclick="obrisiPitanje(<%= pitanja[i].pitanjeid %>)">Obriši</button></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

    <div class="container">
        <footer class="my-2">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            </ul>
            <p class="text-center text-muted">© 2023 Projekat Slido</p>
        </footer>
    </div>
</body>