<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/stylesheets/index.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.js"></script>

  <link rel="icon" type="image/x-icon" href="/images/favicon-16x16.png">
  <link rel="icon" type="image/x-icon" href="/images/favicon-32x32.png">
  <title><%= title %></title>

  <script>
    function approve(id) {
      $.ajax({
        url: '/admin/users/edit',
        data: { id: id, accepted: true },
        type: 'PUT',
      }).done(function (data) {
        console.info(id);
      })
    }

    function decline(id) {
      $.ajax({
        url: '/admin/users/edit',
        data: { id: id, accepted: false },
        type: 'PUT',
      }).done(function (data) {
        $(`#event${data}`).addClass("even");
        console.info(id);
      })
    }
  </script>

</head>
<body id="bb">
<div id="container">
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#" style="color:rgb(201, 18, 73)">DSE</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/admin">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin">Approved events</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/admin/users">Users</a>
          </li>
        </ul>
        <form action="/logout" method="post" class="d-flex">

          <button style="margin-right: 1rem;" class="btn btn-outline-primary" type="submit">Log Out</button>

        </form>
      </div>
    </div>
  </nav>
  <h1 style="margin-top: 2rem;" class="text-light"><%= title %></h1>

  <div class="container-md">
    <table style="cursor: pointer; text-align: center; margin-top: 2rem;" class="table table-responsive table-hover table-bordered align-middle bg-light">
      <thead>
      <tr>
        <th>#</th>
        <th>TITLE</th>
        <th>DATE</th>
        <th>TIME</th>
        <th>LOCATION</th>
        <th>TYPE</th>
        <th>NUMBER OF SEATS</th>
      </tr>
      </thead>
      <tbody style="text-align: center">
      <% for(let i = 0; i < approved_events.length; i++) { %>
        <tr id=`event${events_details[i].id}`>
          <td><%= i+1 %>.</td>
          <td><%= approved_events[i].title %></td>
          <td><%= moment(approved_events[i].date).format('DD-MMM-YYYY') %></td>
          <td><%= moment(approved_events[i].time, 'hh:mm:ss').format('hh:mm a') %></td>
          <td><%= approved_events[i].place %></td>
          <td><%= approved_events[i].type %></td>
          <td><%= approved_events[i].number_of_seats %></td>
        </tr>
      <% } %>
      </tbody>
    </table>
  </div>

  <div id="clear"></div>
  <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 border-top">
    <div class="col-md-4 d-flex align-items-center">
      <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
        <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
      </a>
      <span class="mb-3 mb-md-0 text-muted">Â© 2023 DSE</span>
    </div>
  </footer>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>